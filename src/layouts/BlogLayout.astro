---
// src/layouts/BlogLayout.astro
import type { CollectionEntry } from "astro:content";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import SmartEduCTA from "../components/SmartEduCTA.astro";
import Layout from "./Layout.astro";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const {
  title,
  description,
  publishDate,
  updateDate,
  author,
  category,
  tags,
  image,
  imageAlt,
  showSmartEduCTA,
} = post.data;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("pl-PL", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};

// Czas czytania
const getReadingTime = (content: string) => {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
};

const readingTime = getReadingTime(post.body || "");

// Schema.org Article
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  headline: title,
  description: description,
  image: image ? `https://www.licencjackie.pl${image}` : undefined,
  author: {
    "@type": "Person",
    name: author,
  },
  publisher: {
    "@type": "Organization",
    name: "Licencjackie.pl",
    logo: {
      "@type": "ImageObject",
      url: "https://www.licencjackie.pl/logo.png",
    },
  },
  datePublished: publishDate.toISOString(),
  dateModified: (updateDate || publishDate).toISOString(),
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": `https://www.licencjackie.pl/blog/${post.slug}`,
  },
};

// Schema.org BreadcrumbList
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "Strona główna",
      item: "https://www.licencjackie.pl",
    },
    {
      "@type": "ListItem",
      position: 2,
      name: "Blog",
      item: "https://www.licencjackie.pl/blog",
    },
    {
      "@type": "ListItem",
      position: 3,
      name: title,
      item: `https://www.licencjackie.pl/blog/${post.slug}`,
    },
  ],
};
---

<Layout
  title={`${title} | Licencjackie.pl`}
  description={description}
  image={image}
  canonical={`https://www.licencjackie.pl/blog/${post.slug}`}
>
  <script
    type="application/ld+json"
    set:html={JSON.stringify(articleSchema)}
    slot="head"
  />
  <script
    type="application/ld+json"
    set:html={JSON.stringify(breadcrumbSchema)}
    slot="head"
  />

  <Navbar />

  <main class="pt-24 pb-16">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumbs -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-gray-500">
          <li>
            <a href="/" class="hover:text-primary-600 transition-colors"
              >Strona główna</a>
          </li>
          <li class="text-gray-400">/</li>
          <li>
            <a href="/blog" class="hover:text-primary-600 transition-colors"
              >Blog</a>
          </li>
          <li class="text-gray-400">/</li>
          <li class="text-gray-900 font-medium truncate max-w-[200px]">
            {title}
          </li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="mb-10">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <a
            href={`/blog/kategoria/${category.toLowerCase().replace(/\s+/g, "-")}`}
            class="px-3 py-1 text-sm font-medium bg-primary-100 text-primary-700 rounded-full hover:bg-primary-200 transition-colors"
          >
            {category}
          </a>
          <span class="text-sm text-gray-500">{formatDate(publishDate)}</span>
          <span class="text-sm text-gray-500">• {readingTime} min czytania</span
          >
        </div>

        <h1
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight"
        >
          {title}
        </h1>

        <p class="text-xl text-gray-600 leading-relaxed">
          {description}
        </p>

        {/* Tags */}
        {
          tags && tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-6">
              {tags.map((tag) => (
                <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-600 rounded">
                  #{tag}
                </span>
              ))}
            </div>
          )
        }
      </header>

      {/* Featured Image */}
      {
        image && (
          <div class="mb-10 rounded-2xl overflow-hidden">
            <img
              src={image}
              alt={imageAlt || title}
              class="w-full h-auto object-cover"
              loading="eager"
            />
          </div>
        )
      }

      {/* Smart-Edu CTA - na górze */}
      {
        showSmartEduCTA !== false && (
          <SmartEduCTA variant="inline" class="mb-10" />
        )
      }

      {/* Content */}
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>

      {/* Smart-Edu CTA - na dole */}
      {
        showSmartEduCTA !== false && (
          <SmartEduCTA variant="full" class="mt-12" />
        )
      }

      {/* Author & Share */}
      <footer class="mt-12 pt-8 border-t border-gray-200">
        <div
          class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4"
        >
          <div class="flex items-center gap-3">
            <div
              class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center"
            >
              <span class="text-lg font-bold text-primary-600">
                {
                  author
                    .split(" ")
                    .map((n) => n[0])
                    .join("")
                }
              </span>
            </div>
            <div>
              <p class="font-medium text-gray-900">{author}</p>
              <p class="text-sm text-gray-500">Autor artykułu</p>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <span class="text-sm text-gray-500">Udostępnij:</span>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=https://www.licencjackie.pl/blog/${post.slug}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 hover:bg-blue-100 text-gray-600 hover:text-blue-600 transition-colors"
              title="Udostępnij na Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"
                ></path></svg
              >
            </a>
            <a
              href={`https://twitter.com/intent/tweet?url=https://www.licencjackie.pl/blog/${post.slug}&text=${encodeURIComponent(title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 hover:bg-sky-100 text-gray-600 hover:text-sky-600 transition-colors"
              title="Udostępnij na Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M23.44 4.83c-.8.37-1.5.38-2.22.02.93-.56.98-.96 1.32-2.02-.88.52-1.86.9-2.9 1.1-.82-.88-2-1.43-3.3-1.43-2.5 0-4.55 2.04-4.55 4.54 0 .36.03.7.1 1.04-3.77-.2-7.12-2-9.36-4.75-.4.67-.6 1.45-.6 2.3 0 1.56.8 2.95 2 3.77-.74-.03-1.44-.23-2.05-.57v.06c0 2.2 1.56 4.03 3.64 4.44-.67.2-1.37.2-2.06.08.58 1.8 2.26 3.12 4.25 3.16C5.78 18.1 3.37 18.74 1 18.46c2 1.3 4.4 2.04 6.97 2.04 8.35 0 12.92-6.92 12.92-12.93 0-.2 0-.4-.02-.6.9-.63 1.96-1.22 2.56-2.14z"
                ></path></svg
              >
            </a>
            <a
              href={`https://www.linkedin.com/shareArticle?mini=true&url=https://www.licencjackie.pl/blog/${post.slug}&title=${encodeURIComponent(title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 hover:bg-blue-100 text-gray-600 hover:text-blue-700 transition-colors"
              title="Udostępnij na LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path></svg
              >
            </a>
          </div>
        </div>
      </footer>
    </article>

    {/* Related Posts - można dodać później */}
  </main>

  <Footer />
</Layout>