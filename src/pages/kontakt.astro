---
// src/pages/kontakt.astro
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const API_ENDPOINT =
  "https://4xz7pkbd51.execute-api.eu-north-1.amazonaws.com/prod/send";
---

<Layout
  title="Kontakt | Licencjackie.pl"
  description="Skontaktuj się z nami. Pomożemy Ci z pisaniem pracy licencjackiej lub magisterskiej. Odpowiadamy w ciągu 24h."
>
  <Navbar />

  <main class="pt-32 pb-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
          Skontaktuj się <span class="text-gradient">z nami</span>
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Masz pytania dotyczące pisania pracy dyplomowej? Potrzebujesz pomocy?
          Napisz do nas - odpowiemy w ciągu 24 godzin.
        </p>
      </header>

      <div class="grid md:grid-cols-5 gap-12">
        <!-- Formularz -->
        <div class="md:col-span-3">
          <form id="contact-form" class="space-y-6">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Imię i nazwisko *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                placeholder="Jan Kowalski"
              />
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Adres e-mail *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                placeholder="jan@example.com"
              />
            </div>

            <div>
              <label
                for="subject"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Temat
              </label>
              <select
                id="subject"
                name="subject"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              >
                <option value="Pytanie ogólne">Pytanie ogólne</option>
                <option value="Pomoc z pracą licencjacką"
                  >Pomoc z pracą licencjacką</option
                >
                <option value="Pomoc z pracą magisterską"
                  >Pomoc z pracą magisterską</option
                >
                <option value="Smart-Edu.ai">Pytanie o Smart-Edu.ai</option>
                <option value="Współpraca">Propozycja współpracy</option>
                <option value="Inne">Inne</option>
              </select>
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Wiadomość *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"
                placeholder="Opisz swoje pytanie lub problem..."></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="mt-1 w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
              />
              <label for="privacy" class="text-sm text-gray-600">
                Wyrażam zgodę na przetwarzanie moich danych osobowych w celu
                odpowiedzi na przesłane zapytanie. *
              </label>
            </div>

            <button
              type="submit"
              id="submit-btn"
              class="w-full px-8 py-4 bg-gradient-to-r from-primary-600 to-accent text-white font-semibold rounded-xl hover:opacity-90 transition-opacity disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Wyślij wiadomość
            </button>

            <!-- Status messages -->
            <div id="form-status" class="hidden">
              <div
                id="success-message"
                class="hidden p-4 bg-green-50 border border-green-200 rounded-xl text-green-700"
              >
                <div class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="font-medium">Wiadomość wysłana!</span>
                </div>
                <p class="mt-1 text-sm">
                  Dziękujemy za kontakt. Odpowiemy najszybciej jak to możliwe.
                </p>
              </div>

              <div
                id="error-message"
                class="hidden p-4 bg-red-50 border border-red-200 rounded-xl text-red-700"
              >
                <div class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                  <span class="font-medium">Błąd wysyłania</span>
                </div>
                <p class="mt-1 text-sm">
                  Spróbuj ponownie lub napisz bezpośrednio na adres email.
                </p>
              </div>
            </div>
          </form>
        </div>

        <!-- Info sidebar -->
        <div class="md:col-span-2 space-y-6">
          <div class="p-6 bg-gray-50 rounded-2xl">
            <h3 class="font-semibold text-gray-900 mb-4">
              Informacje kontaktowe
            </h3>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <div
                  class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-primary-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Email</p>
                  <a
                    href="mailto:kontakt@licencjackie.pl"
                    class="text-gray-900 hover:text-primary-600 transition-colors"
                  >
                    kontakt@licencjackie.pl
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div
                  class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-primary-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Czas odpowiedzi</p>
                  <p class="text-gray-900">Do 24 godzin</p>
                </div>
              </div>
            </div>
          </div>

          <div
            class="p-6 bg-gradient-to-br from-primary-50 to-accent/10 border border-primary-200 rounded-2xl"
          >
            <h3 class="font-semibold text-gray-900 mb-2">
              Potrzebujesz szybkiej pomocy?
            </h3>
            <p class="text-sm text-gray-600 mb-4">
              Wypróbuj Smart-Edu.ai - inteligentny asystent do pisania prac
              dyplomowych.
            </p>
            <a
              href="https://smart-edu.ai"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-primary-600 to-accent text-white text-sm font-semibold rounded-lg hover:opacity-90 transition-opacity"
            >
              Wypróbuj za darmo
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>

          <div class="p-6 bg-gray-50 rounded-2xl">
            <h3 class="font-semibold text-gray-900 mb-3">
              Najczęściej zadawane pytania
            </h3>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-start gap-2">
                <span class="text-primary-500">→</span>
                <a
                  href="/blog/struktura-pracy-licencjackiej"
                  class="hover:text-primary-600 transition-colors"
                >
                  Jak napisać strukturę pracy?
                </a>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary-500">→</span>
                <a
                  href="/blog/obrona-pracy-licencjackiej"
                  class="hover:text-primary-600 transition-colors"
                >
                  Jak przygotować się do obrony?
                </a>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary-500">→</span>
                <a
                  href="/blog/bibliografia-pracy-licencjackiej"
                  class="hover:text-primary-600 transition-colors"
                >
                  Jak pisać bibliografię?
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script define:vars={{ API_ENDPOINT }}>
  const form = document.getElementById("contact-form");
  const submitBtn = document.getElementById("submit-btn");
  const formStatus = document.getElementById("form-status");
  const successMessage = document.getElementById("success-message");
  const errorMessage = document.getElementById("error-message");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Disable button
    submitBtn.disabled = true;
    submitBtn.textContent = "Wysyłanie...";

    // Hide previous messages
    formStatus.classList.add("hidden");
    successMessage.classList.add("hidden");
    errorMessage.classList.add("hidden");

    // Collect form data
    const formData = {
      name: document.getElementById("name").value,
      email: document.getElementById("email").value,
      subject: document.getElementById("subject").value,
      message: document.getElementById("message").value,
      domain: "licencjackie.pl",
    };

    try {
      const response = await fetch(API_ENDPOINT, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(formData),
      });

      if (response.ok) {
        formStatus.classList.remove("hidden");
        successMessage.classList.remove("hidden");
        form.reset();
      } else {
        throw new Error("Server error");
      }
    } catch (error) {
      console.error("Error:", error);
      formStatus.classList.remove("hidden");
      errorMessage.classList.remove("hidden");
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = "Wyślij wiadomość";
    }
  });
</script>
