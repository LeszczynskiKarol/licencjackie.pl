---
// src/pages/blog/index.astro
import { getCollection } from "astro:content";
import Footer from "../../components/Footer.astro";
import Navbar from "../../components/Navbar.astro";
import SmartEduCTA from "../../components/SmartEduCTA.astro";
import Layout from "../../layouts/Layout.astro";

const allPosts = await getCollection("blog", ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

const posts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const categories = posts.reduce(
  (acc, post) => {
    const cat = post.data.category;
    acc[cat] = (acc[cat] || 0) + 1;
    return acc;
  },
  {} as Record<string, number>
);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("pl-PL", {
    year: "numeric",
    month: "short",
    day: "numeric",
  }).format(date);
};

const getReadingTime = (content: string) => {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
};
---

<Layout
  title="Poradniki | Licencjackie.pl - Pisanie prac dyplomowych"
  description="Poradniki o pisaniu prac dyplomowych. Tematy prac licencjackich i magisterskich, struktura pracy, metodologia, bibliografia."
>
  <Navbar />

  <main class="pt-32 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="text-center mb-16">
        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6"
        >
          Poradniki <span class="text-gradient">dla studentów</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
          Wszystko czego potrzebujesz, żeby napisać profesjonalną pracę
          dyplomową.
        </p>
      </header>

      <div class="mb-12">
        <SmartEduCTA variant="inline" />
      </div>

      <div class="flex flex-wrap justify-center gap-3 mb-12">
        <a
          href="/blog"
          class="px-4 py-2 text-sm font-medium bg-primary-600 text-white rounded-full"
        >
          Wszystkie ({posts.length})
        </a>
        {
          Object.entries(categories)
            .slice(0, 10)
            .map(([category, count]) => (
              <a
                href={`/blog/kategoria/${category.toLowerCase().replace(/\s+/g, "-")}`}
                class="px-4 py-2 text-sm font-medium bg-gray-100 border border-gray-200 text-gray-700 rounded-full hover:border-primary-500 hover:text-primary-600 transition-colors"
              >
                {category} ({count})
              </a>
            ))
        }
      </div>

      <section>
        {
          posts.length === 0 ? (
            <div class="text-center py-16 bg-gray-50 rounded-2xl">
              <p class="text-gray-500">Artykuły pojawią się tutaj wkrótce.</p>
            </div>
          ) : (
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
              {posts.map((post) => (
                <a
                  href={`/blog/${post.slug}`}
                  class="group block bg-white border border-gray-200 rounded-xl overflow-hidden hover:border-primary-500 hover:shadow-lg transition-all"
                >
                  {post.data.image ? (
                    <div class="aspect-video bg-gray-100 overflow-hidden">
                      <img
                        src={post.data.image}
                        alt={post.data.imageAlt || post.data.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        loading="lazy"
                      />
                    </div>
                  ) : (
                    <div class="aspect-video bg-gradient-to-br from-primary-100 to-accent/20 flex items-center justify-center">
                      <span class="text-4xl font-bold text-primary-300">
                        {post.data.title.substring(0, 2).toUpperCase()}
                      </span>
                    </div>
                  )}
                  <div class="p-5">
                    <div class="flex items-center gap-2 mb-3">
                      <span class="px-2 py-0.5 text-xs font-medium bg-primary-100 text-primary-700 rounded">
                        {post.data.category}
                      </span>
                      <span class="text-xs text-gray-500">
                        {formatDate(post.data.publishDate)}
                      </span>
                    </div>
                    <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors line-clamp-2">
                      {post.data.title}
                    </h3>
                    <p class="text-sm text-gray-600 line-clamp-2 mb-3">
                      {post.data.description}
                    </p>
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-gray-500">
                        {getReadingTime(post.body || "")} min
                      </span>
                      <span class="text-primary-600 font-medium">→</span>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          )
        }
      </section>

      <section class="mt-20">
        <SmartEduCTA variant="full" />
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
