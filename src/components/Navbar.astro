---
// src/components/Navbar.astro
const navLinks = [
  { href: "/", label: "Strona gÅ‚Ã³wna" },
  { href: "/blog", label: "Poradniki" },  
  { href: "/kierunki", label: "Kierunki" },  
];

const tematyLinks = [
  { href: "/blog/kategoria/tematy-prac-licencjackich", label: "Tematy prac licencjackich", icon: "ðŸŽ“" },
  { href: "/blog/kategoria/tematy-prac-magisterskich", label: "Tematy prac magisterskich", icon: "ðŸ“š" },
];

const currentPath = Astro.url.pathname;
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <div
          class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent rounded-lg flex items-center justify-center"
        >
          <span class="text-white font-bold text-lg">L</span>
        </div>
        <div class="flex flex-col">
          <span class="text-xl font-bold text-gray-900 leading-tight">
            Licencjackie<span class="text-primary-600">.pl</span>
          </span>
          <span class="text-xs text-gray-500 hidden sm:block"
            >Poradnik pisania prac dyplomowych</span
          >
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class={`text-sm font-medium transition-colors ${
                currentPath === link.href ||
                (link.href !== "/" && currentPath.startsWith(link.href))
                  ? "text-primary-600"
                  : "text-gray-600 hover:text-gray-900"
              }`}
            >
              {link.label}
            </a>
          ))
        }
        
        <!-- Tematy prac - Dropdown -->
        <div class="relative group">
          <button 
            class={`flex items-center gap-1 text-sm font-medium transition-colors ${
              currentPath.includes('tematy-prac') 
                ? "text-primary-600" 
                : "text-gray-600 hover:text-gray-900"
            }`}
          >
            Tematy prac
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Dropdown menu -->
          <div class="absolute top-full left-0 mt-2 w-64 bg-white rounded-xl shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-1 group-hover:translate-y-0">
            <div class="p-2">
              {tematyLinks.map((item) => (
                <a
                  href={item.href}
                  class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-50 transition-colors"
                >
                  <span class="text-xl">{item.icon}</span>
                  <span class="text-sm font-medium text-gray-700">{item.label}</span>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a
          href="https://smart-edu.ai"
          target="_blank"
          rel="noopener noreferrer"
          class="px-5 py-2.5 bg-gradient-to-r from-primary-600 to-accent text-white text-sm font-semibold rounded-lg hover:opacity-90 transition-opacity"
        >
          Napisz pracÄ™ z AI â†’
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-600 hover:text-gray-900"
        aria-label="OtwÃ³rz menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-2 pt-4 border-t border-gray-100">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class={`px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
                currentPath === link.href ||
                (link.href !== "/" && currentPath.startsWith(link.href))
                  ? "bg-primary-50 text-primary-600"
                  : "text-gray-600 hover:bg-gray-50"
              }`}
            >
              {link.label}
            </a>
          ))
        }
        
        <!-- Mobile: Tematy prac -->
        <div class="px-3 py-2">
          <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Tematy prac</span>
        </div>
        {
          tematyLinks.map((item) => (
            <a
              href={item.href}
              class={`flex items-center gap-2 px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
                currentPath === item.href
                  ? "bg-primary-50 text-primary-600"
                  : "text-gray-600 hover:bg-gray-50"
              }`}
            >
              <span>{item.icon}</span>
              <span>{item.label}</span>
            </a>
          ))
        }
        
        <a
          href="https://smart-edu.ai"
          target="_blank"
          rel="noopener noreferrer"
          class="mt-2 px-4 py-3 bg-gradient-to-r from-primary-600 to-accent text-white text-sm font-semibold rounded-lg text-center"
        >
          Napisz pracÄ™ z AI â†’
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  menuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>